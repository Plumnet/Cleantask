generator client {
  provider = "prisma-client"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model CleaningTask {
  id            String    @id @default(cuid())
  title         String
  description   String?
  location      String?
  frequency     Frequency @default(WEEKLY)
  lastCompleted DateTime?
  nextDue       DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Frequency {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}
